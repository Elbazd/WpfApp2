        <Image Source="/Data/Stade.png" HorizontalAlignment="Left" Height="281" Margin="32,92,0,0" VerticalAlignment="Top" Width="207"/>
        <Image Source="/Data/Stade.png" HorizontalAlignment="Left" Height="281" Margin="525,85,0,0" VerticalAlignment="Top" Width="229"/>
        <TextBlock HorizontalAlignment="Left" Margin="272,85,0,0" TextWrapping="Wrap" Text="Création de votre stade " VerticalAlignment="Top" Height="38" Width="264" FontSize="24"/>
        <Button Content="Revenir en arrière" HorizontalAlignment="Center" Margin="0,298,0,0" VerticalAlignment="Top" Height="29" Width="112" Click="Button_Click_1"/>

    </Grid>
</Window>
